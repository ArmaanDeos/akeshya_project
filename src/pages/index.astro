---
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Client from "../components/Client.astro";
import About from "../components/About.astro";
import Counts from "../components/Counts.astro";
import Services from "../components/Services.astro";
import MoreServices from "../components/MoreServices.astro";
import Features from "../components/Features.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <title>Akeshya - HomePage</title>
    <!-- External CDN -->
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- RemixIcon cdn  -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- BoxIcons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.0/css/boxicons.min.css"
    />
  </head>
  <body>
    <Header />
    <Hero />
    <main id="main">
      <Client />
      <About />
      <Counts />
      <Services />
      <MoreServices />
      <Features />
      <Contact />
    </main>
    <Footer />

    <!-- Back to top -->
    <a
      href="#"
      class="back-to-top d-flex align-items-center justify-content-center active"
      ><i class="bi bi-arrow-up-short"></i></a
    >

    <script src="../js/main.js"></script>
  </body>
</html>
